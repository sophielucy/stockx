OCAMLC = ocamlc
OBJS = ../../compiler/scanner.cmo tokenize.cmo
INCLUDES = -I ../../compiler

default: tokenize

build:
	cd ..; make build

test: build
	cd ..; ./scanner_test.sh; make clean

tokenize: $(OBJS)
	$(OCAMLC) $(INCLUDES) -o tokenize $(OBJS)

%.cmo: %.ml
	$(OCAMLC) $(INCLUDES) -c $<

%.cmi: %.mli
	$(OCAMLC) $(INCLUDES) -c $<

.PHONY: clean
clean:
	rm -f tokenize *.cmo *.cmi

# Generated by ocamldep *.ml
tokenize.cmo:
tokenize.cmx:
